# 301 Redirects for old anchors to new course page
RewriteEngine On

# Redirect old anchors to new course page anchors
RewriteRule ^#program$ /courses/osnovnoy-kurs.html#program [R=301,L]
RewriteRule ^#modules$ /courses/osnovnoy-kurs.html#program [R=301,L]
RewriteRule ^#tariffs$ /courses/osnovnoy-kurs.html#pricing [R=301,L]
RewriteRule ^#pricing$ /courses/osnovnoy-kurs.html#pricing [R=301,L]
RewriteRule ^#faq$ /courses/osnovnoy-kurs.html#faq [R=301,L]
RewriteRule ^#reviews$ /courses/osnovnoy-kurs.html#reviews [R=301,L]
RewriteRule ^#cta$ /courses/osnovnoy-kurs.html#contact [R=301,L]
RewriteRule ^#contacts$ /courses/osnovnoy-kurs.html#contact [R=301,L]
RewriteRule ^#contact$ /courses/osnovnoy-kurs.html#contact [R=301,L]
RewriteRule ^#about$ /courses/osnovnoy-kurs.html#about [R=301,L]

# Redirect old index.html with anchors to course page
RewriteRule ^index\.html#(.*)$ /courses/osnovnoy-kurs.html#$1 [R=301,L]

# Redirect old courses/ to new file
RewriteRule ^courses/$ /courses/osnovnoy-kurs.html [R=301,L]
RewriteRule ^courses/index\.html$ /courses/osnovnoy-kurs.html [R=301,L]

# Ensure proper MIME types
AddType text/css .css
AddType application/javascript .js
AddType image/svg+xml .svg

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule> 